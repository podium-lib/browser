{
  "name": "@podium/browser",
  "version": "1.3.0",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "types": "./types/index.d.ts",
    "require": "./dist/src/index.js",
    "import": "./src/index.js"
  },
  "license": "MIT",
  "keywords": [
    "micro services",
    "micro frontend",
    "components",
    "podium",
    "http"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:podium-lib/browser.git"
  },
  "bugs": {
    "url": "https://github.com/podium-lib/issues"
  },
  "homepage": "https://podium-lib.io/",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rollup -c",
    "lint": "eslint . --ignore-pattern '/dist/'",
    "lint:fix": "eslint --fix . --ignore-pattern '/dist/'",
    "test": "tap --disable-coverage --allow-empty-coverage test/*.js",
    "types": "run-s types:tsc types:test",
    "types:tsc": "tsc",
    "types:test": "tsc --project tsconfig.test.json"
  },
  "dependencies": {
    "@podium/bridge": "^1.2.2",
    "eventemitter3": "4.0.7"
  },
  "devDependencies": {
    "@babel/preset-env": "7.28.5",
    "@podium/eslint-config": "1.0.20",
    "@podium/semantic-release-config": "3.0.0",
    "@podium/typescript-config": "1.0.0",
    "@rollup/plugin-babel": "6.1.0",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "eslint": "9.39.1",
    "jsdom": "27.3.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.4",
    "rollup": "4.53.3",
    "semantic-release": "25.0.2",
    "tap": "21.5.0"
  }
}
